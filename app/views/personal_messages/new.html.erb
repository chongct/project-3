<div class="container">

<h1>New message to <%= @receiver.space ? @receiver.space.company_name : @receiver.username %></h1>

<%= form_for @personal_message do |f| %>
  <%= hidden_field_tag 'receiver_id', @receiver.id %>

  <%= f.label :body %>
  <%= f.text_area :body %>

  <%= f.submit %>
<% end %>

</div>
