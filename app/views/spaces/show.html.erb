      </div>
    </div>
  </div>

  <div class="col s4">
    <%= form_for(@new_review, url: space_reviews_path(@indiv_space.id), remote: true) do |f| %>
      <div class="border">
        <h5>Write review</h5>
        <div class="input-field">
          <%= f.label :title %>
          <%= f.text_field :title %>
        </div>
        <div class="input-field">
          <%= f.label :review %>
          <%= f.text_area :review %>
        </div>
        <%= f.submit class: 'waves-effect waves-light btn' %>
      </div>
    <% end %>

    <div class="review-list">
      <%= render @reviews %>
    </div>
  </div>
</div>
