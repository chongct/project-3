<div class="row">
  <div class="col s4 offset-s1 space-show">
    <img src=<%= @indiv_space.image_url %>>
  </div>
  <div class="col s6">
    <h5><%= @indiv_space.company_name %></h5>
    <p><%= @indiv_space.category.category_type %></p>
    <p><%= @indiv_space.summary %></p>
    <a class="waves-effect waves-light btn"><i class="material-icons left">share</i>Share</a>
    <a class="waves-effect waves-light btn"><i class="material-icons left">bookmark</i>Bookmark</a>
    <a class="waves-effect waves-light btn"><i class="material-icons left">message</i>Message</a>
  </div>
</div>

<div class="row">
  <div class="col s8">
    <div class="border">
      <h5>Business Description</h5>
      <p><%= @indiv_space.description %></p>

      <h5>Company details</h5>
      <h6>Address</h6>
      <p><%= @indiv_space.address %></p>

      <h6>Contact</h6>
      <p><%= @indiv_space.contact %></p>

      <h6>Website</h6>
      <%= link_to @indiv_space.website.website, "http://#{@indiv_space.website.website}" %>

      <h6>Social media</h6>
      <a href="#" class="fa fa-facebook"></a>
      <a href="#" class="fa fa-google"></a>
      <a href="#" class="fa fa-linkedin"></a>
    </div>

    <div>
      <div class="col s4">
        <img src="https://picsum.photos/150/150/?image=21">
      </div>
      <div class="col s8">
        <h6>Title</h6>
        <p>Description</p>
